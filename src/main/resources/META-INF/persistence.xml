<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="databasePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.bootcamp.jpa.entities.Secteur</class>
    <class>com.bootcamp.entities.Commune</class>
    <class>com.bootcamp.entities.Departement</class>
    <class>com.bootcamp.jpa.entities.Axe</class>
    <class>com.bootcamp.jpa.entities.Commentaire</class>
    <class>com.bootcamp.jpa.entities.Impact</class>
    <class>com.bootcamp.jpa.entities.Media</class>
    <class>com.bootcamp.jpa.entities.Pilier</class>
    <class>com.bootcamp.jpa.entities.Projet</class>
    <class>com.bootcamp.jpa.entities.User</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/data_base?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
